<odoo>
    <data>
        <record id="timesheet_wizard_form_view" model="ir.ui.view">
            <field name="name">timesheet.wizard.form.view</field>
            <field name="model">project.task.wizard</field>
            <field name="arch" type="xml">
                <form string="Save Activity">
                    <group>
                        <field name="unit_amount" readonly="1" widget="float_time"/>
                        <field name="name" required="1"/>
                        <field name="date_start" invisible="1"/>
                        <field name="date_stop" invisible="1"/>
                        <field name="task_id" invisible="0"/>
                    </group>
                    <footer>
                        <button name="set_activity" string="Save Activity" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>