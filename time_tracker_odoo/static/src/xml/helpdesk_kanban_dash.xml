<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="siga_erp_custom.dashboard">
            <div class="o_control_panel">
                <h2 style="padding-top:15px;">Category Wise Tickets</h2>
                <ol class="breadcrumb" role="navigation"/>
                <div class="o_cp_searchview" role="search"/>
                <div class="o_cp_left">
                    <div class="o_cp_buttons" role="toolbar" aria-label="Control panel toolbar"/>
                    <aside class="o_cp_sidebar"/>
                </div>
                <div class="o_cp_right">
            <div class="btn-group o_search_options" role="search"/>
                    <nav class="o_cp_pager" role="search" aria-label="Pager"/>
                    <nav class="btn-group o_cp_switch_buttons" role="toolbar" aria-label="View switcher"/>
        </div>
    </div>
        <div class="hr_dash col-xs-12 col-md-12 col-lg-12 col-sm-8">
            <div class="col-md-12">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4">

                            <div class="dash-box">
                                <div class="dash-box-body">
                                    <span class="dash-box-count"><t t-esc="widget.helpdesk_data.technical"/></span>
                                    <span class="dash-box-title">Technical Tickets</span>
                                </div>

                                <div class="dash-box-action tech_ticket">
                                    <button>More Info</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="dash-box">
                                <div class="dash-box-body">
                                    <span class="dash-box-count"><t t-esc="widget.helpdesk_data.functional"/></span>
                                    <span class="dash-box-title">Fuctional Tickets</span>
                                </div>

                                <div class="dash-box-action func_ticket">
                                    <button>More Info</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="dash-box">
                                <div class="dash-box-body">
                                    <span class="dash-box-count"><t t-esc="widget.helpdesk_data.support"/></span>
                                    <span class="dash-box-title">Support Tickets</span>
                                </div>
                                <div class="dash-box-action sup_ticket">
                                    <button>More Info</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>